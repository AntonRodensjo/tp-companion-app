generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  username String @unique @db.VarChar(255)
  salt     String @db.VarChar(255)
  hash     String @db.VarChar(255)

  session    Session[]
  ownedGames Game[]
  games      UserInGame[]
  teams      UserInTeam[]
}

model Session {
  id      String   @id @default(uuid())
  user    User     @relation(fields: [userId], references: [id])
  userId  String
  token   String   @unique @default(uuid())
  expires DateTime
}

model Game {
  id       String @id @default(uuid())
  joinCode Int    @unique
  owner    User   @relation(fields: [ownerId], references: [id])
  ownerId  String

  players UserInGame[]
  teams   Team[]
}

model GameRound {
  id String @id @default(uuid())
}

model UserInGame {
  game   Game   @relation(fields: [gameId], references: [id])
  gameId String
  user   User   @relation(fields: [userId], references: [id])
  userId String

  @@id([gameId, userId])
}

model Team {
  id     String @id @default(uuid())
  game   Game   @relation(fields: [gameId], references: [id])
  gameId String
  color  String

  players UserInTeam[]
}

model UserInTeam {
  team   Team   @relation(fields: [teamId], references: [id])
  teamId String
  user   User   @relation(fields: [userId], references: [id])
  userId String

  @@id([teamId, userId])
}
